rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // FINAL: Secure rules for all collections
    // No permissive catch-all rule - only specific permissions
    
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == adminId;
    }
    
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == studentId;
    }
    
    match /batches/{batchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.data.adminUid == request.auth.uid;
    }
    
    match /invites/{inviteId} {
      allow read, write: if request.auth != null;
    }
  }
}

